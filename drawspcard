}
    

int main(){    
    srand(time(0));
    player p1;
    for(int i = 0; i < 20;i++){
    p1.drawspecialcard();
    }
    for(int i = 0; i < 20;i++){
    cout << p1.specialcard[i] << endl;
    }
    return 0;
}
